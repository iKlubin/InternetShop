@model InternetShop.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container my-5">
    <h1 class="mb-4">Редактор товара</h1>

    <div class="row" style="margin-bottom: 600px">
        <div class="col-md-6 offset-md-3">

            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <div class="product-image-container" style="max-width: 700px; width: 100%;">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid" style="width: 100%; border-radius: 10px; object-fit: cover;">
                </div>
            </div>

            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label font-weight-bold">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label font-weight-bold">Описание</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExtendedDescription" class="control-label">Полное описание</label>
                    <textarea asp-for="ExtendedDescription" class="form-control"></textarea>
                    <span asp-validation-for="ExtendedDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label font-weight-bold">Цена (₽)</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ViewCount" class="control-label font-weight-bold">Количество просмотров</label>
                    <input asp-for="ViewCount" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category" class="control-label font-weight-bold">Категория</label>
                    <select asp-for="Category" class="form-control" asp-items="@(new SelectList(ViewBag.Categories))"></select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Tags" class="control-label font-weight-bold">Теги</label>
                    <input asp-for="Tags" class="form-control" />
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label font-weight-bold">Изображение</label>
                    <input type="file" name="imageFile" class="form-control-file" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary btn-block">Сохранить изменение</button>
                </div>
            </form>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
